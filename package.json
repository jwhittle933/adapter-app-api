{
  "name": "adapterapi",
  "version": "1.0.0",
  "description": "An API for AdapterApp by Jeremy Osborn",
  "private": true,
  "license": "MIT",
  "scripts": {
    "scriptstart": "./scripts/startup.sh",
    "start": "node ./bin/www",
    "watch": "nodemon ./bin/www",
    "buildf": "cd frontend && yarn build",
    "test": "mocha --timeout 10000",
    "main": "./bin.www",
    "lint": "node node_modules/eslint/bin/eslint.js *.js routes/**/*.js frontend/src/main.js frontend/src/App.vue",
    "pretty": "prettier --write ./app.js ./routes/**/*.js",
    "migrate": "node ./DataLayer/migration.js",
    "seed": "node ./DataLayer/seed.js",
    "testdb": "node ./DataLayer/testQuery.js"
  },
  "dependencies": {
    "babel-eslint": "^10.0.1",
    "cors": "^2.8.5",
    "debug": "~4.1.1",
    "dotenv": "^7.0.0",
    "eslint": "^5.15.1",
    "eslint-plugin-vue": "^5.2.2",
    "express": "~4.16.0",
    "helmet": "^3.15.1",
    "http-errors": "~1.7.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "morgan": "~1.9.0",
    "mysql": "^2.16.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "pug": "2.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "backend": [
      "node node_modules/eslint/bin/eslint.js *.js routes/**/*.js",
      "prettier --write ./bin/www app.js ./routes/**/*.js",
      "git add --all"
    ],
    "fronend": [
      "node node_modules/eslint/bin/eslint.js frontend/src/main.js frontend/src/App.vue",
      "prettier --write frontend/src/main.js",
      "git add --all"
    ]
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "mocha": "^6.0.2"
  }
}
