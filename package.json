{
  "name": "adapterapi",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "scriptstart": "./scripts/startup.sh",
    "start": "node ./bin/www",
    "watch": "nodemon ./bin/www",
    "test": "",
    "main": "./bin.www",
    "lint": "node node_modules/eslint/bin/eslint.js *.js routes/**/*.js",
    "lint-fix": "eslint --fix .",
    "pretty": "prettier --write ./app.js ./routes/**/*.js",
    "migrate": "node ./DataLayer/migration.js",
    "seed": "node ./DataLayer/seed.js",
    "testdb": "node ./DataLayer/testQuery.js"
  },
  "dependencies": {
    "chai": "^4.2.0",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^6.2.0",
    "eslint": "^5.15.1",
    "express": "~4.16.0",
    "helmet": "^3.15.1",
    "http-errors": "~1.6.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha": "^6.0.2",
    "morgan": "~1.9.0",
    "mysql": "^2.16.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "pug": "2.0.0-beta11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "node node_modules/eslint/bin/eslint.js *.js routes/**/*.js",
      "prettier --write ./bin/www app.js ./routes/**/*.js",
      "git add"
    ]
  }
}
